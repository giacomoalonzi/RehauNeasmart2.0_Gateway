{
  "server": {
    "type": "tcp",
    "address": "0.0.0.0",
    "port": 502
  },
  "modbus": {
    "slave_id": 240,
    "sync_on_startup": false,
    "circuit_breaker_failure_threshold": 5,
    "circuit_breaker_recovery_timeout": 60
  },
  "api": {
    "host": "0.0.0.0",
    "port": 5001,
    "enable_auth": false,
    "rate_limit_per_minute": 60,
    "enable_cors": true
  },
  "database": {
    "path": "./data/registers.db",
    "enable_fallback": true,
    "retry_max_attempts": 3
  },
  "logging": {
    "level": "INFO",
    "enable_file": true,
    "file_path": "./data/gateway.log",
    "enable_console": true
  },
  "debug_mode": true,
  "zones": {
    "1": {
      "label": "First Floor",
      "zones": {
        "1": "Living Room",
        "2": "Jungle Bathroom",
        "3": "Studio",
        "4": "Bedroom",
        "5": "Marble Bathroom",
        "6": "Laundry",
        "7": "Small Bedroom"
      }
    }
  }
}
